{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "TerraformStateBackend",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:GetBucketVersioning",
        "s3:PutBucketVersioning",
        "s3:PutEncryptionConfiguration",
        "s3:GetEncryptionConfiguration",
        "s3:PutBucketPublicAccessBlock",
        "s3:GetBucketPublicAccessBlock",
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:CreateBucket"
      ],
      "Resource": [
        "arn:aws:s3:::goorm-popcorn-tfstate",
        "arn:aws:s3:::goorm-popcorn-tfstate/*"
      ]
    },
    {
      "Sid": "TerraformStateLock",
      "Effect": "Allow",
      "Action": [
        "dynamodb:DescribeTable",
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:DeleteItem",
        "dynamodb:UpdateItem"
      ],
      "Resource": "arn:aws:dynamodb:ap-northeast-2:375896310755:table/goorm-popcorn-tfstate-lock"
    },
    {
      "Sid": "NetworkAndCompute",
      "Effect": "Allow",
      "Action": [
        "ec2:*",
        "elasticloadbalancing:*",
        "ecs:*",
        "autoscaling:*",
        "cloudwatch:*",
        "logs:*",
        "application-autoscaling:*",
        "servicediscovery:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "DataAndMessaging",
      "Effect": "Allow",
      "Action": [
        "rds:*",
        "elasticache:*",
        "kafka:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "SecurityAndSecrets",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:*",
        "kms:*",
        "iam:CreateRole",
        "iam:DeleteRole",
        "iam:GetRole",
        "iam:PutRolePolicy",
        "iam:DeleteRolePolicy",
        "iam:AttachRolePolicy",
        "iam:DetachRolePolicy",
        "iam:CreatePolicy",
        "iam:DeletePolicy",
        "iam:GetPolicy",
        "iam:GetPolicyVersion",
        "iam:ListPolicyVersions",
        "iam:CreatePolicyVersion",
        "iam:DeletePolicyVersion"
      ],
      "Resource": "*"
    },
    {
      "Sid": "PassRoleForECS",
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": "arn:aws:iam::375896310755:role/goorm-popcorn-*",
      "Condition": {
        "StringLike": {
          "iam:PassedToService": [
            "ecs-tasks.amazonaws.com",
            "ecs.amazonaws.com"
          ]
        }
      }
    },
    {
      "Sid": "Route53AndACM",
      "Effect": "Allow",
      "Action": [
        "route53:*",
        "acm:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ECR",
      "Effect": "Allow",
      "Action": "ecr:*",
      "Resource": "*"
    },
    {
      "Sid": "AlbLogBucketsCreate",
      "Effect": "Allow",
      "Action": [
        "s3:CreateBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AlbLogBucketsManage",
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "arn:aws:s3:::goorm-popcorn-alb-*-alb-logs-*",
        "arn:aws:s3:::goorm-popcorn-alb-*-alb-logs-*/*"
      ]
    },
    {
      "Sid": "AlbLogBucketsListForWait",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": "arn:aws:s3:::goorm-popcorn-alb-*-alb-logs-*"
    }
  ]
}
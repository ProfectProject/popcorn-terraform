# AWS Configuration
aws_region   = "ap-northeast-2"
project_name = "goorm-popcorn"
environment  = "prod"

# SSL Certificate ARN (from ACM)
certificate_arn = "arn:aws:acm:ap-northeast-2:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# ECR Repository URL
ecr_repository_url = "123456789012.dkr.ecr.ap-northeast-2.amazonaws.com"

# Network Configuration
vpc_cidr                     = "10.0.0.0/16"
public_subnet_cidrs          = ["10.0.1.0/24", "10.0.2.0/24"]
private_app_subnet_cidrs     = ["10.0.11.0/24", "10.0.12.0/24"]
private_data_subnet_cidrs    = ["10.0.21.0/24", "10.0.22.0/24"]

# Database Configuration
database_name        = "goorm_popcorn_prod"
master_username      = "postgres"
aurora_instance_count = 3

# Cache Configuration
elasticache_node_type = "cache.t4g.small"